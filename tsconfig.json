{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "types": ["node","jest"],
    "skipLibCheck": true,
    "pretty": true,
    "sourceMap": true,
    "target": "es2021",
    "rootDir": "./src",
    "outDir": "./lib",
    "baseUrl": "./src",
    "removeComments": true
  },
  "exclude": ["node_modules"],
  "include": ["src/**/*"]
}